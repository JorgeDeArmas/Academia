# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# TikTok OAuth
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
# Set to 'true' for sandbox/testing, 'false' for production
TIKTOK_SANDBOX=true
# For local dev you can use http://localhost:3000; for Vercel use your HTTPS domain
NEXT_PUBLIC_TIKTOK_REDIRECT_URI=https://your-project.vercel.app/api/auth/tiktok/callback

# App
NEXTAUTH_SECRET=generate-a-long-random-string
NEXTAUTH_URL=https://your-project.vercel.app
